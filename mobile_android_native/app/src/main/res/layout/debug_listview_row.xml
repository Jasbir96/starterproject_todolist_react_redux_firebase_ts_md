<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/debug_listview_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">
        <!--for some reason, these text views aren't inheriting the apptheme's font size-->
        <TextView
            android:id="@+id/debug_listview_row_text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Time"
            android:textSize="@dimen/text_size" />

        <!--for some reason, these text views aren't inheriting the apptheme's font size-->
        <TextView
            android:id="@+id/debug_listview_row_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>